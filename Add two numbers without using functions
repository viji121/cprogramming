#include <stdio.h>

void add_numbers() {
    int num1, num2, sum;
    
    printf("Enter first number: ");
    scanf("%d", &num1);
    
    printf("Enter second number: ");
    scanf("%d", &num2);
    
    sum = num1 + num2;
    
    printf("Sum of %d and %d is %d", num1, num2, sum);
}

int main() {
    add_numbers();
    return 0;
}
